<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_launcher" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/airguard_for_android"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/versionNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version_number"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:id="@+id/contact_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_corners"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_mail"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contact_us"
                        android:padding="14dp"
                        android:gravity="center_vertical|start"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_link"
                        android:padding="8dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/credits_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/credits" />

                <LinearLayout
                    android:id="@+id/developer_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_corners"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_developer"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/developer_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/developer"
                        android:padding="14dp"
                        android:gravity="center_vertical|start"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_link"
                        android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maintainer_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_corners"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_manager"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/maintainer_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/maintainer"
                        android:padding="14dp"
                        android:gravity="center_vertical|start"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_link"
                        android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/airguard_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_corners"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_home_black_24dp"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/website"
                        android:padding="14dp"
                        android:gravity="center_vertical|start"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_link"
                        android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/libraries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:background="@drawable/rounded_corners"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_library_books_24"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/libraries_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_third_party_libraries_title"
                        android:padding="14dp"
                        android:gravity="center_vertical|start"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/copyright_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/copyright" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAttributions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>